@model JobSearch.Models.ForgotPasswordMv
@{
    ViewBag.Title = "Forgot Passowrord";
}

<section class"contact-section">
    <div class="container">
        <div class="row">
            <div class="job-category-listing mb-50">
                <div class="col-md-12">
                    <h2 class="contact-title" align="center">Forgot Password</h2>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
                @using (Html.BeginForm("Forgot", "User", FormMethod.Post,
                    new
                    {
                        @class = "form-contact",
                        @novalidate = "novalidate"
                    }))
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                @Html.EditorFor(model => model.Email, new
                           {
                               htmlAttributes = new
                               {
                                   @class = "form-control valid",
                                   @type = "email",
                                   @name = "Email",
                                   @id = "Email",
                                   @placeholder = "Enter Registered Email",
                                   @onfocus = "this.placeholder  = ''",
                                   @onblur = "this.placeholder = 'Enter Registered Email'",
                                   @required = "true"
                               }
                           })
                                @Html.ValidationMessageFor(model => model.Email,
                               "",
                               new { @class = "text-danger" })

                            </div>
                        </div>
                       
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Send Email" class="button boxed-btn" />
              
                    </div>


                }


            </div>

            <div class="col-md-6" style="padding:60px 0px 0px 60px">

                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-home"></i></span>
                    <div class="media-body">
                        <h3>Famagusta, TRNC.</h3>
                        <p>EMU, 99628</p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-tablet"></i></span>
                    <div class="media-body">
                        <h3>+90 533 876 73 18</h3>
                        <p>Mon to Fri 9am to 6pm</p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-email"></i></span>
                    <div class="media-body">
                        <h3>info@upjob.com</h3>
                        <p>Send us your query anytime!</p>
                    </div>
                </div>
            </div>

        </div>
    </div>

</section>

