@model  JobSearch.Models.JobRequirementsMV

@{
    ViewBag.Title = "Job Requirements";
}


<section class="contact-section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="contact-title">Add Job Requirements</h2>
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">


                                @Html.DropDownList("JobRequirementID", null, "Select Requirement",

                                    htmlAttributes: new
                                    {
                                        @class = "",


                                    })
                                @Html.ValidationMessageFor(model => model.JobRequirementID,
                                    "",
                                    new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.PostJobID)

                            </div>

                        </div>
                        <div>
                            <hr />
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.EditorFor(model => model.JobRequirementDetails, new
                           {
                               htmlAttributes = new
                               {
                                   @class = "form-control single-input",
                                   @type = "text",
                                   @name = "name",
                                   @placeholder = "Enter Selected Requirement Details",
                                   @onfocus = "this.placeholder  = ''",
                                   @onblur = "this.placeholder = 'Enter Selected Requirement Details'",

                               }
                           })
                                @Html.ValidationMessageFor(model => model.JobRequirementDetails,
                                "",
                                new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="form-group-mt-4">
                        <input type="submit" value="Add" class="genric-btn success e-large" style="float:right;" />
                        @Html.ActionLink("Back To List", "CompanyJobsList", null, new { @class = "btn btn-danger", @style = "float:left;" })
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<hr />

<h2>Job Requirements</h2>

<table class="table table-hover">
    <tr>
        <th>
            Requirement
        </th>
        <th>
            Details
        </th>

        <th>Action</th>
    </tr>

    @foreach (var item in Model.Details)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.JobRequirementsTable.JobRequirementTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobRequirementDetails)
            </td>
            <td>
                @Html.ActionLink("Delete", "DeleteRequirements", new { id = item.JobRequirementDetailID }, new { @class = "genric-btn danger circle" })
            </td>
        </tr>
    }

</table>
